
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
<div class="hero-wrap js-fullheight" style="background-image: url(/Content/images/banner.jpg); height: 30px">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center" style="margin-top: 200px" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="/">Trang chủ</a></span> <span>Tìm kiếm</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Kết quả tìm kiếm</h1>
            </div>
        </div>
    </div>
</div>
<section class="ftco-section ftco-degree-bg">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    @if (ViewBag.List.Count == 0)
                    {
                        <h2 style="color:red;align-content:center">Không tìm thấy khết quả nào</h2>
                    }
                    @foreach (var item in ViewBag.List)
                    {
                <div class=" col-md-4 col-lg-4 ftco-animate">
                    <div class="destination" style="border:1px solid #ccc;">

                        <a href="/PublicCar/DetailCar/@item.vehicle_id"> <img width="100%" style="height:100%;" class="img img-2 d-flex justify-content-center align-items-center" src="/Content/images/@item.image"></a>
                        <div class="text p-3">
                            <div class="d-flex">
                                <div class="one">
                                    <h3><a href="/PublicCar/DetailCar/@item.vehicle_id">@item.name</a></h3>

                                </div>

                            </div>

                            <p class="days"><span style="font-size:120%">@item.price VNĐ / 1 ngày</span></p>
                            <hr>
                            <p class="bottom-area d-flex">
                                <span>Số lượng : @item.quantity </span>
                                <span class="ml-auto"><a href="/PublicCar/DetailCar/@item.vehicle_id" style="padding:10px">Xem chi tiết</a></span>
                            </p>
                        </div>
                    </div>
                </div>
                    }

                </div>
                <div class="row mt-5">
                    <div class="col text-center">
                        <div class="block-27">
                            <ul>
                                @if (ViewBag.tag > 1)
                                {
                                    int b = ViewBag.tag - 1;
                                    if (ViewBag.Key == 1)
                                    {
                                        <li><a href="/PublicCar/Search?page=@b&idType=@ViewBag.idType">&lt;</a></li>
                                    }
                                    else if (ViewBag.key == 2)
                                    {
                                        <li><a href="/PublicCar/Search?page=@b&name=@ViewBag.name&idType=0">&lt;</a></li>
                                    }
                                    else
                                    {
                                        <li><a href="/PublicCar/Search?page=@b&name=@ViewBag.name&idType=@ViewBag.idType">&lt;</a></li>
                                    }

                                }
                                else
                                {
                                    <li></li>
                                }
                                @for (var i = 1; i <= ViewBag.pageSize; i++)
                                {
                                    if (ViewBag.tag == i)
                                    {
                                        if (ViewBag.Key == 1)
                                        {
                                            <li class="active"><a href="/PublicCar/Search?page=@i&idType=@ViewBag.idType">@i</a></li>
                                        }
                                        else if (ViewBag.key == 2)
                                        {
                                            <li class="active"><a href="/PublicCar/Search?page=@i&name=@ViewBag.name&idType=0">@i</a></li>
                                        }
                                        else
                                        {
                                            <li class="active"><a href="/PublicCar/Search?page=@i&name=@ViewBag.name&idType=@ViewBag.idType">@i</a></li>
                                        }

                                    }
                                    else
                                    {
                                        if (ViewBag.Key == 1)
                                        {
                                            <li><a href="/PublicCar/Search?page=@i&idType=@ViewBag.idType">@i</a></li>
                                        }
                                        else if (ViewBag.key == 2)
                                        {
                                            <li><a href="/PublicCar/Search?page=@i&name=@ViewBag.name&idType=0">@i</a></li>
                                        }
                                        else
                                        {
                                            <li><a href="/PublicCar/Search?page=@i&name=@ViewBag.name&idType=@ViewBag.idType">@i</a></li>
                                        }
                                    }

                                }

                                @if (ViewBag.tag < ViewBag.pageSize)
                                {
                                    int a = ViewBag.tag + 1;
                                    if (ViewBag.Key == 1)
                                    {
                                        <li><a href="PublicCar/Search?page=@a&idType=@ViewBag.idType">&gt;</a></li>
                                    }
                                    else if (ViewBag.key == 2)
                                    {
                                        <li><a href="/PublicCar/Search?page=@a&name=@ViewBag.name&idType=0">&gt;</a></li>
                                    }
                                    else
                                    {
                                        <li><a href="/PublicCar/Search?page=@a&name=@ViewBag.name&idType=@ViewBag.idType">&gt;</a></li>
                                    }

                                }
                                else
                                {
                                    <li></li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div> <!-- .col-md-8 -->
        </div>
    </div>
</section> <!-- .section -->
